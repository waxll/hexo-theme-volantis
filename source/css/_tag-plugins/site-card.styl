.site-card-group
  display: flex
  flex-wrap: wrap
  justify-content: flex-start
  margin: 0 -0.5 * $gap
  align-items: stretch
.site-card
  margin: $gap * 0.5
  width: "calc(100% / 4 - %s)" % $gap
  @media screen and (min-width: $device-2k)
      width: "calc(100% / 5 - %s)" % $gap
  @media screen and (max-width: $device-tablet)
      width: "calc(100% / 3 - %s)" % $gap
  @media screen and (max-width: $device-mobile)
      width: "calc(100% / 2 - %s)" % $gap
  a 
    display: block
    line-height: 1.4
    height 100%
    .img 
      width: 100%
      height 120px
      @media screen and (max-width: $device-mobile)
        height 100px
      overflow: hidden
      border-radius: $border-card * 0.5
      box-shadow: 0 1px 2px 0px rgba(0, 0, 0, 0.2)
      background: var(--color-block)
      img
        width: 100%
        height 100%
        trans(.75s)
        object-fit: cover
    &:hover
      img 
        transform: scale(1.1)
      .title
        color: $color-hover
  .info
    margin-top: $gap * 0.75
  span 
    display: block
    margin: $gap * 0.25 0
  .title
    font-size: $fontsize-body * 1.2
    @media screen and (max-width: $device-mobile)
      font-size: $fontsize-body
    font-weight: 500
    color: var(--color-p)
    display: -webkit-box
    -webkit-box-orient: vertical
    overflow: hidden
    -webkit-line-clamp: 1
    trans()
  .desc
    font-size: $fontsize-body * 0.9
    color: var(--color-meta)
    display: -webkit-box
    -webkit-box-orient: vertical
    overflow: hidden
    -webkit-line-clamp: 2
  